# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration - Production (Set in Vercel)
DATABASE_URL="postgresql://admin:game123@your-production-db-host:5432/game_tracker_prod"

# CORS Configuration
CLIENT_URL=https://your-game-tracker-client.vercel.app
ALLOWED_ORIGINS=https://your-game-tracker-client.vercel.app

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Security
JWT_SECRET=your_very_strong_production_jwt_secret_change_this
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=warn
ENABLE_SQL_LOGGING=false

# External Services
DICEBEAR_API_URL=https://api.dicebear.com
WEATHER_API_URL=https://wttr.in

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Vercel Specific
VERCEL_ENV=production
VERCEL_GIT_PROVIDER=github
VERCEL_GIT_REPO_SLUG=your-username/game-tracker